<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="springboot.shuttle.mapper.MemberMapper"> <!-- DP_인터페이스를 묶어줘야 함 경로 알려주는 것 -->

    <sql id="memberColumns">
        loginId
        , password
        , name
        , email
        , postcode
        , address
        , detailAddress
        , tel
        , point
        , role
    </sql>
<!-- 회원가입 로그인 시작 -->

    <select id="findAll" resultType="Member">
        SELECT
            <include refid="memberColumns" />
        FROM
            member
    </select>

    <insert id="memberSave" parameterType="Member"> <!-- DB에 회원가입 폼에서 적은 정보 전달 -->
        INSERT INTO member (
            <include refid="memberColumns" />
        )   VALUES (
                #{loginId}
                ,#{password}
                ,#{name}
                ,#{email}
                ,#{postcode}
                ,#{address}
                ,#{detailAddress}
                ,#{tel}
                ,0
                ,"user"
        )
    </insert> <!-- id에 memberSave를 똑같이 넣어줘야 함 insert는 데이터를 넣는것이니 저장하기위해서 사용 즉 memberSave id는 Mapper랑 같아야 함 -->

    <select id="findByLoginId" parameterType="String" resultType="Member">
        SELECT
            <include refid="memberColumns" />
        FROM
            member
        where
            loginId = #{loginId}
    </select>

    <select id="login" parameterType="String" resultType="Member">
        SELECT
            <include refid="memberColumns" />
        FROM
            member
        where
            password = #{password}
    </select>


    <!-- 회원가입 로그인 끝-->

    <!-- 비밀번호 변경 -->
    <update id="updatePw" parameterType="PwUpdate">
        update members set password = #{changePw} where loginId = #{loginId}
    </update>
    <!-- 비밀번호 변경 끝 -->

    <!-- 로그인 중복 처리 -->
    <select id="idCheck" parameterType="String" resultType="int">
        select count(*) from members where loginId=#{loginId}
    </select>
    <!-- 로그인 중복 처리 끝 -->

    <!-- 포인트 변경 -->
    <update id="chargePoint" parameterType="Member">
        UPDATE member SET point = #{point} WHERE loginId = #{loginId}
    </update>
    <!-- 포인트 변경 끝 -->

</mapper>